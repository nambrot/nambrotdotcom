@import "bourbon";
@import "_globals.css.scss";
@import "foundation_and_overrides";

// Blog
.blog_post {

  width: 100%;
  margin: 2% auto;

  @media (min-width: $mobile-width) {
    width: 100%;
    max-width: 800px;
    &.longer {
      width: 100%;
      max-width: 1800px;
    }
    margin: 2% 0 5px 0;
  }


  color: #525252;
  background-color: white;
  padding: 2% 5% 5px 5%;
  &.no_padding {
    padding: 0;
  }
  border: 1px solid #d8d8d8;
  -webkit-border-radius: 3px;
  border-radius: 3px;
  background-color: #fff;
  border-bottom-width: 2px;

  p {
    line-height: 2em;
    color: #252525;
  }
  h2,h3,h4,h5,h6 {
    color: #252525;
    font-weight: 200;
  }
}

.blog_post.index {
  margin: 0;
  border: 0;

  header {
    @include clearfix;
    margin-bottom: 3px;
  }

  h1 {
    float: left;
    font-size: 24px;
  }

  h6 {
    font-size: 14px;
  }
  p {
    line-height: 1.3em;
    margin-bottom: 0.5em;
    font-size: 0.9em;
  }
}

.blog_post_spacer {
  margin: 3px;
}

.blog_post_header {
  margin-bottom: 20px;

  h1 {
    font-weight: 200;
    margin-bottom: 5px;
  }
  h6 {
    text-align: right;
  }


}

#disqus_thread, #blog_share_bar {
  @media (min-width: $mobile-width) {
    width: 80%;
    max-width: 800px;
    margin: 2% 0 5px 0;
  }
  width: 80%;
  margin: 2% auto;
  max-width: 800px;
}

// Functional stuff

.centered {
  text-align: center;
  margin: 0 auto;
}

#container-overlay {
  position:fixed;
  width: 100%;
  top: 0px;
  height: 100%;
  background-color: rgba(0,0,0,0.5);
  z-index: 10;
  cursor: pointer;
}

.margin-5 {
  margin: 5%;
}

