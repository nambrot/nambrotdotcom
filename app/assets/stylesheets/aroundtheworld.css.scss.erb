@import "bourbon";
@import "_globals.css.scss";

#home {
  @include transition(all ease 0.3s);
  position: fixed;
  left: 50px;
  top: 0;
  color: #525252;
  background-color: white;
  padding: 2px 5px 5px 5px;
  border-bottom-left-radius: 10px;
  border-bottom-right-radius: 10px;
  box-shadow: 1px 1px 12px 2px rgba(10, 10, 10, 0.5);

  &:hover {
    padding: 10px 20px 20px 20px;
    text-decoration: underline;
  }
}

#aroundtheworld-container {
  position: fixed;
  height: 100%;
  width: 100%;
  top: 0px;
  left: 0px;
}

#map {
  @include transition(all ease 0.3s);
  position: fixed;
  bottom: 0px;
  left: 0px;
  opacity: 1;
  width: 100%;
  height: 100%;
}

#global-nav {
  display: none;
}

#playlist {
  @include transition(all ease 0.3s);
  position: fixed;
  left: 0px;
  bottom: 65%;
  width: 45%;
  height: 150px;
  &:hover, &.hover {
    height: 35%;
  }
}

.PlayListMenu {
  @include linear-gradient(rgba(40, 40, 40, 0.01), rgba(2,2,2,0.9));
  @include transition(all ease 0.3s);
  padding-top: 50px;
  padding-left: 5%;
  height: 100%;
  color: white;
  overflow: hidden;

  h1 {
    margin: 0;
    font-size: 26px;
    font-weight: bold;
    text-decoration: underline;
    color: white;
  }
}

.PlayListItem {
  span.title {
    margin: 0;
    line-height: 37px;
    font-size: 18px;
    padding-left: 10px;
  }

  &.play, &.pause {
    position: relative;

    span.title {
      padding-left: 40px;
    }
  }

  &.play {
    &:before {
      position: absolute;
      content: '';
      left: 9px;
      top: 9px;
      width: 20px;
      height: 20px;
      background-size: cover;
      background-image: url(<%= image_path 'play.png' %>);
    }
  }

  &.pause {
    &:before {
      position: absolute;
      content: '';
      left: 9px;
      top: 9px;
      width: 20px;
      height: 20px;
      background-size: cover;
      background-image: url(<%= image_path 'pause.png' %>);
    }
  }

  &:hover {
    text-decoration: underline;
    cursor: pointer;
  }
}

.youtubeplayer {
  position: fixed;
  background: white;
  left: 0;

  height: 65%;
  width: 65%;
  bottom: 0px;
  z-index: 100;

  &.hidden {
    display: none;
  }
}

.offpage {
  opacity: 0;
}

.PlayListMenu {
  &:hover {
    opacity: 1;
  }
}

.PlayListScrollContainer {
  @include transition(all ease 0.3s);
}
